<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/main">
    <Button
        android:id="@+id/button2"
        android:layout_height="40dp" 
		android:layout_marginTop="10dp" 
        android:layout_width="220dp" 
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/btnToLogin" 
        android:textColor="#000000" 
		android:textSize="13dp"
        android:text="Register" />

    <Button
        android:id="@+id/btnToLogin"
        android:layout_height="40dp" 
		android:layout_width="170dp" 
		android:textColor="#000000" 
		android:textSize="13dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/button2"
        android:text="Login" />

    <EditText
        android:id="@+id/username"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_above="@+id/btnToLogin"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="72dp"
        android:ems="10"
        android:hint="Email"
        android:textColor="#000000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/userTV"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignRight="@+id/pwdTv"
        android:layout_alignTop="@+id/username"
        android:text="Email"
        android:textColor="#000000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/pwdTv"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/userTV"
        android:layout_toLeftOf="@+id/password"
        android:text="Password"
        android:textColor="#000000"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/pwdTv"
        android:ems="10"
        android:hint="Password"
        android:textColor="#000000"
        android:textSize="15dp" 
        android:inputType="textPassword">
        
     

        <requestFocus />
    </EditText>
    
    <Button 
   		android:id="@+id/passres" 
   		android:layout_alignParentLeft="true" 
   		android:layout_alignParentRight="true" 
   		android:layout_below="@+id/btnToLogin" 
   		android:layout_height="40dp" 
   		android:layout_width="wrap_content" 
   		android:text="Forgot Password" 
   		android:textColor="#000000" 
   		android:textSize="13dp"/>

    <TextView 
    	android:id="@+id/loginErrorMsg" 
    	android:layout_alignParentLeft="true" 
    	android:layout_below="@+id/passres" 
    	android:layout_height="56dp" 
    	android:layout_width="fill_parent" 
    	android:textColor="#000000"
    	/>
</RelativeLayout>
