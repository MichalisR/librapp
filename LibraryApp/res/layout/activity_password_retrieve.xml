<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main" >

    <Button
        android:id="@+id/btnPwdRetrieve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_r"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="@string/btn_pwdr" />

    <EditText
        android:id="@+id/email_r"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="122dp"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress" />
    
    <TextView 
        android:id="@+id/alert_pass" 
        android:layout_alignParentLeft="true" 
        android:layout_alignParentRight="true" 
        android:layout_below="@+id/btnPwdRetrieve" 
        android:layout_height="56dp" 
        android:layout_width="wrap_content" 
        android:textColor="#000000"
        />

    <Button
        android:id="@+id/btnToLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnPwdRetrieve"
        android:layout_alignRight="@+id/btnPwdRetrieve"
        android:layout_below="@+id/alert_pass"
        android:text="Login" />

</RelativeLayout>
